@import url(https://fonts.googleapis.com/css?family=Exo+2:200i);

body {
  position: relative;
}

.main-overlay {
  animation: fadeOut 1s 1s forwards;
  width: 100%;
  background: white;
  top: -2%;
  z-index: 1;
  overflow: hidden;
  position: absolute;
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.main-visual {
  position: relative;
  box-sizing: border-box;
}

.main-visual-inner {
  position: relative;
  z-index: 1;
}

.main-visual-inner-img {
  animation: bgScroll 3s 1.8s forwards;
  background: url("https://i.imgur.com/sM9HWr0.jpg");
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
  transition: 1s ease;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: calc(var(--vh, 1vh) * 100);
}

.main-visual-inner-img.visible {
  background: url("https://i.imgur.com/sM9HWr0.jpg");
  background-position: 100% 86%;
  background-repeat: no-repeat;
  background-size: cover;
  transition: 3s ease;
}

@media (max-width: 1024px) {
  .main-visual-inner-img.visible {
    background-position: center;
  }
}

@keyframes bgScroll {
  from {
    background-position-y: 0%;
  }
  to {
    background-position-y: 80%;
  }
}

.main-visual::-webkit-scrollbar {
  display: none;
}

.main-visual-inner::-webkit-scrollbar {
  display: none;
}

.main-visual-overlay {
  position: absolute;
  width: 100%;
  height: 102%;
  background: rgba(0, 0, 0, 0.7);
  top: -2%;
  z-index: -1;
  opacity: 0;
  transition: 1.2s;
}

.main-visual-overlay.visible {
  opacity: 1;
  transition: 1.2s;
}

.main-visual-logo {
  animation: Opacity 1s 0.5s forwards, Scale 0.2s 0.5s forwards;
  color: #000;
  margin: 0 auto;
  width: 600px;
  position: relative;
  top: 23vh;
  opacity: 0;
}

.main-visual-logo img {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  transition: all var(--microtip-transition-duration, 0.8s) var(--microtip-transition-easing, ease-in-out) var(--microtip-transition-delay, 0s);
}

.main-visual-logo img.active {
  opacity: 1;
}

@media (max-width: 768px) {
  .main-visual-logo {
    animation: OpacitySP 1s 0.5s forwards, ScaleSP 0.2s 0.5s forwards;
    padding-top: 15vh;
    width: 70%;
    opacity: 1;
    top: 20vh;
  }
  .main-visual-logo img {
    width: 100%;
  }
}

@keyframes Opacity {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes Scale {
  from {
    width: 600px;
  }
  to {
    width: 500px;
  }
}

@keyframes OpacitySP {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes ScaleSP {
  from {
    width: 70%;
  }
  to {
    width: 60%;
  }
}

@media screen and (max-width: 768px) {
  .main-visual-logo {
    font-size: 80px;
    font-size: 5rem;
    animation: Color 1.5s 1s forwards, Scale 0.2s 1s forwards;
  }
  @keyframes Color {
    from {
      color: #000;
    }
    to {
      color: #fff;
    }
  }
  @keyframes Scale {
    from {
      font-size: 80px;
      font-size: 5rem;
    }
    to {
      font-size: 70px;
      font-size: 4.375rem;
    }
  }
}

.main-visual-txt {
  text-align: center;
}

.main-visual-txt p {
  font-size: 16px;
  font-size: 1rem;
  color: #6df6ff;
  font-weight: 400;
  margin-top: 30px;
  line-height: 2;
}

@media (max-width: 768px) {
  .main-visual-txt p {
    font-size: 14px;
    font-size: 0.875rem;
  }
}

.main-visual-txt .main-visual-scroll {
  font-size: 20px;
  font-size: 1.25rem;
  color: #fff;
  padding-top: 85vh;
  letter-spacing: 1px;
  position: relative;
}

@media (max-width: 768px) {
  .main-visual-txt .main-visual-scroll {
    font-size: 16px;
    font-size: 1rem;
    padding-top: 70vh;
  }
}

.main-visual-txt .main-visual-scroll:after {
  animation: Scroll 1.7s infinite;
  content: "";
  display: inline-block;
  width: 20px;
  height: 20px;
  background: url(../../assets/img/common/arrow-scroll.svg) no-repeat;
  background-size: 100% 100%;
  position: absolute;
  bottom: -10px;
  left: 50%;
  margin-left: -10px;
}

.main-visual-txt .main-visual-scroll a {
  color: #fff;
  text-decoration: none;
}

.main-visual-txt .main-visual-ttl {
  font-size: 20px;
  font-size: 1.25rem;
  color: #6df6ff;
  font-weight: 500;
  margin: 0;
  padding-top: 25vh;
}

.main-visual-txt .main-visual-copy {
  font-size: 42px;
  font-size: 2.625rem;
  color: #fff;
  font-weight: bold;
  margin: 50px 0;
  padding-top: 25vh;
}

@media (max-width: 768px) {
  .main-visual-txt .main-visual-copy {
    font-size: 30px;
    font-size: 1.875rem;
    line-height: 1.6;
    margin: 30px 0;
    padding-top: 18vh;
  }
}

.main-visual-txt .btn-default {
  margin: 50px auto 0;
  padding-bottom: 200px;
}

@media (max-width: 768px) {
  .main-visual-txt .btn-default {
    padding: 30px 0 100px;
  }
}

.main-visual-txt .btn-default a {
  border: 1px solid #6df6ff;
}

@keyframes Scroll {
  from {
    bottom: -10px;
  }
  to {
    bottom: -20px;
  }
}


.backgrounds {
  width: 100%;
  height: 100%;
  position: fixed;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  z-index: -1;
}

.backgrounds .background {
  width: 100%;
  height: 100%;
  background-size: cover;
  position: absolute;
  left: 0;
  top: 0;
  background-image: url("https://i.imgur.com/sM9HWr0.jpg");
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.overlay:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: #3F51B5;
  opacity: 0.7;
}


